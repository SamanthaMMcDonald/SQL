CREATE TABLE Shoes (Style TEXT PRIMARY KEY, Material TEXT,Size INTEGER, Color TEXT, Heel TEXT);

CREATE TABLE Drinks (id INTEGER PRIMARY KEY, name TEXT, Quantity INTEGER, Package_Size INTEGER);

